@inherits LayoutComponentBase
@inject NavigationManager NavigationManager 

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton OnClick="@(() => NavigationManager.NavigateTo("/"))" Color="Color.Inherit" Icon="@Icons.Material.Filled.AllOut" aria-label="home"></MudIconButton>
        <MudText Typo="Typo.h5" Class="ml-3">Application</MudText>
        <LoginDisplay></LoginDisplay>
    </MudAppBar>
    <MudDrawer Open="true" ClipMode="DrawerClipMode.Always" Elevation="2">
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All">Home</MudNavLink>
            <MudNavLink Href="/default" Match="NavLinkMatch.Prefix">Default</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer>
            <br/>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>